@{
    ViewData["Title"] = "Register new user";
}

<p class="text-center">Please fill in the following to create a new user</p>

<form method="post" id="registerForm">
    <div class="form-group">
        <label class="control-label" for="nameField">Name:</label>
        <input type="text" class="form-control" id="nameField" placeholder="John Doe">
    </div>
    <div class="form-group">
        <label class="control-label" for="emailField">Email address:</label>
        <input type="email" class="form-control" id="emailField" placeholder="you@example.com">
    </div>
    <div class="form-group">
        <label class="control-label" for="passField">Password:</label>
        <input type="password" class="form-control" id="passField" placeholder="Password">
    </div>
    <div class="form-group">
        <label class="control-label" for="passField2">Repeat password:</label>
        <input type="password" class="form-control" id="passField2" placeholder="Repeat password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <div class="pull-right">
        <a class="btn btn-default" asp-controller="Account" asp-action="Login">
            I already have a user 
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
    </div>
</form>

@section Scripts {
    <environment names="Development">
        <script src="~/js/register.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/register.min.js" asp-append-version="true"></script>
    </environment>
}