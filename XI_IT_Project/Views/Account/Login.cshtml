@{
    ViewData["Title"] = "Login";
}
<p class="text-center">Login below to continue</p>

<form method="post">
    <div class="form-group">
        <label for="emailField">Email address:</label>
        <input type="email" class="form-control" id="emailField" placeholder="you@example.com" required>
    </div>
    <div class="form-group">
        <label for="passField">Password</label>
        <input type="password" class="form-control" id="passField" placeholder="Password" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <div class="pull-right">
        <a class="btn btn-default" asp-controller="Account" asp-action="Register">
            Register new user 
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
    </div>
</form>